<resources>

    <!-- Base application theme. -->
    <style name="LocationAlarm"/>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="primaryTextColor">@color/dark</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="primaryTextColor">@color/white</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="LocationAlarm.Login"/>

    <style name="LocationAlarm.Login.LoginButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_login_button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LocationAlarm.Login.RegisterButton"  parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_register_button_selector</item>
        <item name="android:textColor">@color/register_button_selector</item>
    </style>

    <style name="LocationAlarm.Login.EditText">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_x</item>
    </style>

    <style name="LocationAlarm.Login.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>
</resources>

<resources>

    <style name="RobotoRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RobotoThin">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="RobotoLight">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoBlack">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!-- Base application theme. -->
    <style name="LocationAlarm" />

    <style name="LocationAlarm.AppBar" parent="Theme.MaterialComponents.Light.DarkActionBar">

    </style>

    <style name="LocationAlarm.ToolBar" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>

        <item name="android:popupElevation">10dp</item>
        <item name="android:windowElevation">10dp</item>
<!--        <item name="android:popupBackground">@android:drawable/list_selector_background</item>-->
<!--        <item name="android:actionModeBackground">@drawable/bg_login_button_pressed</item>-->
    </style>

    <style name="LocationAlarm.ToolBarPopup" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/mainColorB</item>
    </style>

    <style name="LocationAlarm.ToolBarText">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LocationAlarm.Button" />

    <style name="LocationAlarm.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_action_text_selector</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="LocationAlarm.Button.ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="LocationAlarm.Button.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="LocationAlarm.Button.ActionIcon">
        <item name="android:height">@dimen/card_image_size</item>
        <item name="android:width">@dimen/card_image_size</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:tint">@color/grey</item>
        <item name="android:layout_margin">@dimen/half_list_item_margin</item>
    </style>

    <style name="LocationAlarm.Button.MapZoom">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:tint">@color/white</item>
        <item name="android:padding">@dimen/half_list_item_margin</item>
        <item name="android:elevation">@dimen/fab_button_elevation</item>
    </style>

    <style name="LocationAlarm.Text" />

    <style name="LocationAlarm.Text.Card" />

    <style name="LocationAlarm.Text.Card.Tittle" parent="RobotoMedium">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_xl</item>
    </style>

    <style name="LocationAlarm.Text.Card.Body" parent="RobotoMedium">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/text_l</item>
    </style>

    <style name="LocationAlarm.Text.EmptyText" parent="RobotoMedium">
        <item name="android:textColor">@color/textEmpty</item>
        <item name="android:textSize">@dimen/text_xxl</item>
    </style>

    <style name="LocationAlarm.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="LocationAlarm.TextInputEditText">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_x</item>
    </style>

    <style name="LocationAlarm.TextInputLayoutTittle" parent="RobotoRegular">
        <item name="android:textColor">@color/blockStrokeColor</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>


</resources>
